<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/Selected_imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/phone_user_image" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_edge_layout"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:weightSum="1">

            <ImageView
                android:id="@+id/phone_input_name_imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:layout_weight="0.005"
                android:src="@drawable/icon_phone_name" />

            <EditText
                android:id="@+id/phone_input_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:hint="Name"
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_edge_layout"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:weightSum="1">

            <ImageView
                android:id="@+id/phone_input_phonenumber_imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:layout_weight="0.005"
                android:src="@drawable/icon_phone_number" />

            <EditText
                android:id="@+id/phone_input_phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:hint="Phone_number"
                android:textSize="30dp"
                android:textStyle="bold"  />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_edge_layout"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:weightSum="1">

            <ImageView
                android:id="@+id/phone_input_email_imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:layout_weight="0.005"
                android:src="@drawable/icon_phone_email" />

            <EditText
                android:id="@+id/phone_input_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:hint="E-mail"
                android:textSize="30dp"
                android:textStyle="bold"  />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="0.5"
        android:weightSum="1">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/phone_input_cancelbutton"
            android:text="취소"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.5"
            android:background="@drawable/btn_whitebutton"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/phone_input_savebutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.5"
            android:text="저장"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/btn_whitebutton"/>

    </LinearLayout>


</LinearLayout>